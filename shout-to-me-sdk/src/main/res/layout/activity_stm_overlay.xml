<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:stm="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/stm_black_transparent_listening_overlay"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="me.shoutto.sdk.StmRecorderActivity">

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitXY"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:id="@+id/cancelButton"
        android:onClick="cancelRecording"
        android:src="@drawable/close_button"
        android:background="@android:color/transparent"
        />

    <me.shoutto.sdk.RecordingGraphicView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/outerCircle"
        stm:circlecolor="@color/stm_recording_outer_circle_gray"
        stm:circlesize="450"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/inner_circle"
        />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:id="@+id/recording_timer_background"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:max="500"
        android:progress="500"
        android:indeterminate="false"
        android:progressDrawable="@drawable/circular"
        />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:id="@+id/recording_timer"
        android:layout_height="200dp"
        android:layout_width="200dp"
        android:layout_centerInParent="true"
        android:progress="0"
        android:indeterminate="false"
        android:progressDrawable="@drawable/circular_blue"
        />

    <TextView
        android:id="@+id/countdown_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/recording_timer"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginTop="-15dp"/>

    <Button
        android:layout_width="130dp"
        android:layout_height="65dp"
        android:text="Done"
        android:id="@+id/stopRecordingButton"
        android:onClick="stopRecording"
        android:layout_centerInParent="true"
        android:layout_marginTop="450dp"
        android:background="@android:color/transparent"
        android:textColor="@color/stm_recording_inner_circle_blue"
        android:textSize="24sp"
        android:textStyle="bold"
        />

</RelativeLayout>
